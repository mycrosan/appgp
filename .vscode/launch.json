{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "GPPremium (FVM)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "debug",
            "program": "lib/main.dart",
            "args": [
                "--flavor",
                "development"
            ],
            "env": {
                "FLUTTER_ROOT": "${workspaceFolder}/.fvm/flutter_sdk"
            },
            "toolArgs": [
                "--dart-define=ENVIRONMENT=development"
            ]
        },
        {
            "name": "GPPremium Release (FVM)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "release",
            "program": "lib/main.dart",
            "env": {
                "FLUTTER_ROOT": "${workspaceFolder}/.fvm/flutter_sdk"
            }
        },
        {
            "name": "GPPremium Profile (FVM)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "profile",
            "program": "lib/main.dart",
            "env": {
                "FLUTTER_ROOT": "${workspaceFolder}/.fvm/flutter_sdk"
            }
        }
    ]
}
